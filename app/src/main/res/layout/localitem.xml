<?xml version="1.0" encoding="utf-8"?>
<com.xing.cloudmusic.customcontrol.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:clickable="false"
        android:focusable="false" />


    <TextView
        android:id="@+id/local_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/checkbox"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@id/checkbox"
        android:singleLine="true"
        android:maxEms="8"
        android:ellipsize="end"
        android:textSize="20dp"
        android:text="TextView12345678910111213141516" />

    <TextView
        android:id="@+id/local_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/local_text1"
        android:layout_toEndOf="@+id/local_text1"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:maxEms="16"
        android:ellipsize="end"
        android:layout_alignBaseline="@id/local_text1"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:text="TextView" />
</com.xing.cloudmusic.customcontrol.CheckableRelativeLayout>